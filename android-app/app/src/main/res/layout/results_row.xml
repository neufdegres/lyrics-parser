<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/results_row_color"
        android:layout_width="36dp"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:padding="12dp"
        app:srcCompat="@drawable/results_lyrics_shape" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/results_row_upper_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/results_example_1"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/results_row_lower_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/results_example_artist_title"
            android:textColor="#717171" />
    </LinearLayout>

</LinearLayout>